<p id="notice"><%= notice %></p>
    <main class="container">

<h1>Select Your 5 Players</h1>
  <%= form_tag(games_path, method: "post") do %>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Scoring</th>
          <th>Rebounds</th>
          <th>Assists</th>
          <th>Steals</th>
          <th>Blocks</th>
          <th colspan="3"></th>
        </tr>
      </thead>
     
      <tbody>
        <% @cards.each do |card| %>
          <tr>
            <td><%= card.name %></td>
            <td><%= card.scoring %></td>
            <td><%= card.rebounds %></td>
            <td><%= card.assists %></td>
            <td><%= card.steals %></td>
            <td><%= card.blocks %></td>
            <td><%= check_box_tag("cards[]", card.id) %></td>
            <td><%= label_tag(:cards, "Select") %></td> 
            <td>      
          </tr>
        <% end %>

      </tbody>
    </table>
  <%=submit_tag("Draft") %>
  <% end %>

  <%= link_to "New", new_card_path %>

</main>


