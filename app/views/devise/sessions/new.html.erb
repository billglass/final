<script>

  $(document).ready(function(){
  $(".container2").submit(function() {
    $(".container2").fadeOut(2000);
  });
});  
</script>
</head>

<div class="container2">
<script type="text/javascript">
      var tag = document.createElement('script');
      tag.src = "http://www.youtube.com/player_api";
      var firstScriptTag = document.getElementsByTagName('script')[0];
      firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

      // 3. This function creates an <iframe> (and YouTube player)
      //    after the API code downloads.
      var player;
      function onYouTubePlayerAPIReady() {
        player = new YT.Player('player', {
          playerVars: { 'autoplay': 1, 'controls': 1,'autohide':1,'wmode':'opaque' },
          videoId: '20QQVBcKpPc',
          events: {
            'onReady': onPlayerReady}
        });
      }

      // 4. The API will call this function when the video player is ready.
      function onPlayerReady(event) {
        event.target.mute();
      }
</script>

<div style="position: fixed; z-index: -999; width: 100%; height: 100%" >
  <iframe id="player" frameborder="0" height="100%" width="100%" 
    src="https://www.youtube.com/embed/20QQVBcKpPc?modestbranding=1&autohide=1&showinfo=0&controls=0&enablejsapi=1&autoplay=1">
  </iframe>

</div>

<div class="enter">
<h2 class="instructions">Defend Your Skills</h2>

<div class="efields">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, :class => "labels" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, :class => "labels" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => "submitting" %>
  </div>
</div>

<% end %>
  
<div class="nav-links">
  <%= render "devise/shared/links" %>
</div>

</div>
</div>
